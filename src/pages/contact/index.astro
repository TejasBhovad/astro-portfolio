---
import Layout from "../../layouts/index.astro";
import "../../styles/utils.scss";
---

<Layout>
  <div class="h-screen pt-12 w-full flex items-center justify-center">
    <div class="h-full w-full contact px-8">
      <div class="h-1/4 w-full font-bold text-8xl flex items-center">
        Get in Touch
      </div>
      <div class="h-2/4 w-full">
        <div class="w-full h-4/5 flex flex-col" style="min-height: 320px;">
          <!-- name -->
          <div
            class="h-1/3 w-full ip-box flex justify-start items-center"
            style="min-height: 50px;"
          >
            <div
              class="w-24 flex items-center justify-start font-bold text-3xl text-accent flex"
            >
              01
            </div>
            <input
              type="text"
              style="min-height: 48px;"
              placeholder="Name"
              class="w-full h-1/2 text-lightText dark:text-darkText bg-transparent border-b-2 border-gray-300 dark:border-darkUtility focus:outline-none dark:focus:border-darkText focus:border-gray-500 text-2xl font-regular transition duration-200 ease-in-out px-4 pt-1"
            />
          </div>
          <!-- Email -->
          <div
            class="h-1/3 w-full ip-box flex justify-start items-center"
            style="min-height: 50px;"
          >
            <div
              class="w-24 flex items-center justify-start font-bold text-3xl text-accent flex"
            >
              02
            </div>
            <input
              style="min-height: 48px;"
              type="email"
              placeholder="Email"
              class="w-full h-1/2 text-lightText dark:text-darkText bg-transparent border-b-2 border-gray-300 dark:border-darkUtility focus:outline-none dark:focus:border-darkText focus:border-gray-500 text-2xl font-regular transition duration-200 ease-in-out px-4 pt-1"
            />
          </div>
          <!-- Message -->
          <div
            class="h-1/3 w-full ip-box flex justify-start items-center"
            style="min-height: 50px;"
          >
            <div
              class="w-24 flex items-center justify-start font-bold text-3xl text-accent flex"
            >
              03
            </div>
            <input
              style="min-height: 48px;"
              type="text"
              placeholder="Message"
              class="w-full h-1/2 text-lightText dark:text-darkText bg-transparent border-b-2 border-gray-300 dark:border-darkUtility focus:outline-none dark:focus:border-darkText focus:border-gray-500 text-2xl font-regular transition duration-200 ease-in-out px-4 pt-1"
            />
          </div>
        </div>

        <div class="w-full h-2/5">
          <button
            class="py-2 px-12 h-18 text-2xl text-lightText dark:text-darkText bg-lightSecondary dark:bg-darkSecondary active:bg-accent dark:active:bg-accent transition duration-400 ease-in-out rounded-sm transform hover:scale-105"
          >
            Send
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>
