---
import Layout from "../layouts/index.astro";
import TypeWriter from "../components/TypeWriter.jsx";
import "../styles/utils.scss";

// words list
const words = [
  "Passionate about coding",
  "Full Stack Developer",
  "Tech enthusiast",
  "UI/UX Designer",
];
---

<Layout>
  <div class="w-full h-full flex justify-center items-center">
    <div class="large-display flex w-full items-center">
      <div class="ld-contain h-full w-3/5 flex items-center">
        <div
          class="sm-logo aspect-square px-8 w-full h-1/3 text-6xl flex font-semibold flex-col justify-center items-center"
        >
          <img src="/icon.png" alt="" class="rounded-full w-5/6" />
        </div><div
          class="container px-8 w-full h-2/3 sm:text-6xl text-4xl flex font-semibold flex-col sm:justify-center justify-start text-center sm:text-left"
        >
          <h3>Hello, I'm Tejas</h3>
          <TypeWriter words={words} client:load />
          <a href="/contact"
            ><button
              class="text-2xl sm:w-36 w-full bg-lightSecondary dark:bg-darkSecondary rounded-md p-2 mt-12 hover:scale-105 transition duration-100 ease-in-out"
            >
              Hire me</button
            ></a
          >
        </div>
      </div>
      <div class="logo h-full w-2/5 flex items-center">
        <div
          class="aspect-square px-8 w-full h-2/3 text-6xl flex font-semibold flex-col justify-center"
        >
          <img src="/icon.png" alt="" class="logo rounded-full w-5/6" />
        </div>
      </div>
    </div>
  </div>
</Layout>
<!-- use layout which uspports larger displays -->
